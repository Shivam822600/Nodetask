<body style="background-color: darkblue;"></body>

<form method="POST" enctype="multipart/form-data" action="/resume/insertDetails">
    <body style="background-color: darkblue;">
    <div class="main">
        <div class="root">
            <div class="row col gap">
                <div style="padding: 10px;font-size: 40px;font-weight: bold;letter-spacing: 2px; color: blue; ">
                    <i> :: Mandatory Details:: </i>
                </div>
                <a href="/resume/fetchResume">List Of Details</a>
                <div class="row col gap" style="margin-left: 50px;">

                    <b style="font-size: 20px; color: coral;">Templates :</b>
                    <img src="/images/universal.jpg" style=" width: 250px; height: 250px;">
                    <b style="font-size: 18px; color: black;"><a href="/images/universal.jpg">Universal</a> </b>
                    <img src="/images/fensy.jpg" style="margin-top: 30px; width: 250px; height: 300px;">
                    <b style="font-size: 18px; color: black;"><a href="/images/fensy.jpg">Fensy</a> </b>
                    <img src="/images/compact.jpg" style="margin-top: 30px; width: 250px; height: 300px;">
                    <b style="font-size: 18px; color: black;"><b><a href="/images/compact.jpg">Compact</a> </b>
                </div>

            </div>
            <div class=" row " style="margin-top: 100px;">
                <div class=" row ">
                    <b style="font-size: 20px; color: coral;">Personal Details:</b>
                </div>
                <div class="col gap seco ">

                    <select required name="salut" style="width:300px; margin-top: 20px; height: 37; border-radius: 5px;">
                        <option>-Select-</option>
                        <option>Master</option>
                        <option>Miss</option>
                    </select>
                </div>
            </div>
            <div class="row ">
                <div class="col  gap">
                    <input required style="width:400px; margin-top: 20px; height: 37; border-radius: 5px; " type="text"
                        class="form-control" placeholder="First name" name="firstname">
                </div>
                <div class="col  gap">
                    <input required style="width:400px; margin-top: 20px; height: 37; border-radius: 5px; " type="text"
                        class="form-control" placeholder="Last name" name="lastname">
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col" style="display: flex; align-items: center; justify-content: center;">
                    <input type="radio" value="Male" name="gender"><i class="fas fa-male"
                        style="color: darkslateblue;margin-left: 10px;font-size: 25px;margin-right: 30px;"></i>
                    <input type="radio" value="Female" name="gender"><i class="fas fa-male"
                        style="color: deeppink;margin-left: 10px;font-size: 25px;"></i>
                </div>
                <div class="col" style="display: flex;align-items: center; ">
                    <input required style="width:400px;" type="date" class="form-control" name="birthdate">
                </div>
            </div>

            <div class="row" style="margin-top: 20px; ">
                <div class="col">
                    <input required style="width:400px;" type="text" class="form-control" placeholder="Father's Name"
                        name="fathername">
                </div>
                <div class="col">
                    <input required style="width:400px;" type="file" class="form-control" name="picture">
                </div>
            </div>

            <div class="row" style="margin-top: 20px;">
                <div class="row"><b style="font-size: 20px; color: coral;">Qualification :</b></div>
            </div>
            <div class="row"><b style="font-size: 15px; color: black;"><b>School :</b></div>

            <div class="row" style="margin-top: 20px; ">
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="10 Passing Year"
                        name="thpassyr">
                </div>
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="12th Passing Year"
                        name="twhpassyr">
                </div>
            </div>

            <div class="row" style="margin-top: 20px;  ">
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="10th Board "
                        name="thboard">
                </div>
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="12th Board"
                        name="twhboard">
                </div>
            </div>

            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="10th Percentage"
                        name="thper">
                </div>
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="12th Percentage"
                        name="twhper">
                </div>
            </div>
            <div class="row"><b style="font-size: 15px; margin-top: 15px; color:black;">Graduation :</b></div>

            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="Graduation Percentage"
                        name="gradper">
                </div>
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="University"
                        name="graduniv">
                </div>
            </div>

            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="Passing Year"
                        name="gradyr">
                </div>
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="Aggregates CGPA"
                        name="gradcgpa">
                </div>
            </div>

            <div class="row" style="color: coral; font-weight: bold; font-size: 20px; margin-top: 20px; ">
                Contact Details :</div>

            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="Mobile Number"
                        name="mobile">
                </div>
                <div class="col">
                    <input required type="text" style="width:400px;" class="form-control" placeholder="Email Id" name="email">
                </div>
            </div>

            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <select required class="form-control" style="width:400px;" name="state" id="state">
                    </select>
                </div>
                <div class="col">
                    <select required class="form-control" style="width:400px;" name="city" id="city">
                    </select>
                </div>
            </div>

            <div class="row" style="color: coral; font-weight: bold; font-size: 20px; margin-top: 20px; ">
                Skills : </div>

            <div class="row" style="margin-top: 20px;">
                <div class="col">
                    <textarea required rows="3" style="width:880px;" name="skills"
                        placeholder="Ex-Graphic Designing,Content Writing etc."></textarea>
                </div>

            </div>

            <div class="row" style="margin-top: 20px;">
              <b style="color: coral; font-size: 20px;">Template type :</b>
                <div class="col" style="display: flex; align-items: center; justify-content: center;">
                    <input type="radio" value="universal" name="temptype">Universal<i class=""
                        style="color: black;margin-left: 10px;font-size: 25px;margin-right: 30px;"></i>
                    <input type="radio" value="fensy" name="temptype">Fensy<i class=""
                        style="color: black;margin-left: 10px;font-size: 25px; margin-right: 30px;"></i>
                        <input type="radio" value="compact" name="temptype">Compact<i class=""
                        style="color: black;margin-left: 10px;font-size: 25px;"></i>
                </div>
                </div>



            <div class="row ">
                <div class="col" style="display:flex;justify-content:center;align-items:center; margin-top: 20;">
                    <input  type="submit" class="btn btn-primary" style="width: 200px;">
                </div>
                <div class="col" style="display:flex;justify-content:center;align-items:center; margin-top: 20px;">
                    <input type="reset" class="btn btn-primary" style="width: 200px;">

                </div>
            </div>
        </div>
      
    </div>
    
 <center>
       <div style="justify-content: center; align-items: center; background-color: lightgrey; margin-top: 20px; width: 800px; height: 60px; border-radius: 20px;">
        <% var result %>
        <% if(result==1) { %>
            <h3 style="color: darkgreen; margin-top: 10px;">Details Submited</h3>
            <% } else if (result==0) { %>
                <h3 style="color: darkred; margin-top: 10px;">Failed To Submit Details</h3>
                <% } %>
            
    
    </div>
    </center>
    
           
        
        

   </body> 


</form>



